{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "$lib/*": [
                "src/lib/*"
            ],
            "$components/*": [
                "src/components/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.svelte"
    ]
}